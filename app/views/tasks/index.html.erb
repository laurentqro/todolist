<h1>Hello Louise!</h1>

<div role="form">
  <%= form_for (@task) do |t| %>
    <%= t.text_field :description, class: "form-control" %>
  <% end %>
</div>

<hr>

<% @tasks.each do |task| %>
  <div class="well well-lg" style="background-color:<%= task.color %>;">
  <span class="task-text"><%= task.description %></span>
  <%= link_to ('<i class="fa fa-pencil-square-o fa-lg"></i>'.html_safe), edit_task_url(task), class: "edit" %>
  <%= link_to ('<i class="fa fa-trash-o fa-lg"></i>'.html_safe), task_url(task), method: "delete", class: "trash" %>
  </div>
<% end %>



